    <dd id="max"></dd>
    <dt>Min:</dt>
    <dd id="min"></dd>
  </dl>

  <div class="chart-container">
    <canvas id="chart" width="400" height="400"></canvas>
  </div>

  <button id="button">click</button>
</body>
