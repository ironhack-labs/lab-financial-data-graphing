  <input id="start" type="date">

  <label for="end">To:</label>
  <input id="end" type="date">

  <label for="currency">Currency:</label>
  <select id="currency">
    <option value="USD">US Dollar ($)</option>
    <option value="EUR">Euros (â‚¬)</option>
  </select>

  <h2>Values</h2>
