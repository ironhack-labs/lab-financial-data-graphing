  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <h1> {{title}} </h1>
  <p>Welcome to {{title}} </p>

  {{!-- <input type="date" id="from-date" onchange="selectDate();"> --}}
  {{!-- <input type="date" id="to-date" onchange="selectDate();"> --}}
  <p>Please select a timeframe and the currency</p>

  <div>
    <div id="date">
      <label for="from-date">From: </label>
      <input type="date" id="from-date">

      <label for="to-date">To: </label>
      <input type="date" id="to-date">
      <p id="error"></p>
    </div>

    <label for="currency">Currency</label>
    <select id="currency" name="currency">
      <option value="USD">$US</option>
      <option value="EUR">EUR</option>
    </select>
  </div>

<br>
  <button type="button" id="update" class="btn btn-success">Update</button>
  <canvas id="myChart" width="400" height="400"></canvas>

  <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js"></script>
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
